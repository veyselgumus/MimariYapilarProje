@using Business.Models;
@model HesapLoginModel
@*Generated by ScaffoldApp.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
	ViewData["Title"] = "GİRİŞ";
}


<div class="row">
	<div class="col-12">
		<form asp-action="Login">
			@Html.AntiForgeryToken()
			<div asp-validation-summary="All" class="text-danger"></div>
			<div class="row mb-3">
				<label asp-for="UserName" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="UserName" class="form-control" />
					<span asp-validation-for="UserName" class="text-danger"></span>
				</div>
			</div>
			<div class="row mb-3">
				<label asp-for="Sifre" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="Sifre" type="password"class="form-control" />
					<span asp-validation-for="Sifre" class="text-danger"></span>
				</div>
			</div>

			<input asp-for ="ReturnUrl" type="hidden" />

			<div class="row mb-3">
				<div class="offset-2 col-5">

						<input type="submit" value="GİRİŞ" class="btn btn-primary" />
						@if (!User.Identity.IsAuthenticated)
						{
							<li class="btn btn-primary">
								<a class="text-white" asp-area="" asp-controller="Kullanicis" asp-action="Create">Kayıt Ol</a>
							</li>
						}

				</div>
				
			</div>
		</form>
	</div>
</div>

@section Scripts{
	<partial name="_ValidationScriptsPartial"/>
}




