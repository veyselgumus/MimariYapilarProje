@using Business.Models;
@model IEnumerable<MimarModel>
@*Generated by ScaffoldApp.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
	ViewData["Title"] = "Architects";
	string message = TempData["Message"] as string;
}

@if (message is not null)
{
	<p class="text-danger">
		@message
	</p>
}

<h1>@ViewData["Title"]</h1>
<p class="text-danger">@Model.ToList().Count() Kayıt Bulundu</p>

<p>
	<a asp-action="Create">Create a New Architect</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th class="col-2">
				@Html.DisplayNameFor(model => model.ImgSrcDisplay)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.AdSoyadGosterim)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.DogumTarihiGosterim)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.YasıyorMuGosterim)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td class="col-2">
					@if (item.ImgSrcDisplay is not null)
					{
						<img src="@item.ImgSrcDisplay" class="img-thumbnail" />
					}
					else
					{
						<i class="fa-solid fa-image" title="No Image"></i>
					}
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.AdSoyadGosterim)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.DogumTarihiGosterim)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.YasıyorMuGosterim)
				</td>
				<td>
					<a asp-action="Details" asp-route-id="@item.Id">Buildings</a>
					@if (User.IsInRole("Admin"))
					{

						@: &nbsp;| &nbsp;
						<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> @:&nbsp;|&nbsp;
						<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
					}
				</td>
			</tr>
		}
	</tbody>
</table>



