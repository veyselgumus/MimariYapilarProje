@using Business.Models;
@using MVC.Settings;
@model MimarModel
@*Generated by ScaffoldApp.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Create a New Architect";
	string message = TempData["Message"] as string;
}

@if (message is not null)
{
	<p class="text-danger">
		@message
	</p>
}

<h1>@ViewData["Title"]</h1>

<h4>Architect</h4>
<hr />
<div class="row">
    <div class="col-12">
        <form asp-action="Create" enctype="multipart/form-data">
		@Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row mb-3">
                <label asp-for="Adi" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="Adi" class="form-control" />
					<span asp-validation-for="Adi" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
                <label asp-for="Soyadi" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="Soyadi" class="form-control" />
					<span asp-validation-for="Soyadi" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
                <label asp-for="DogumTarihi" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="DogumTarihi" class="form-control" />
					<span asp-validation-for="DogumTarihi" class="text-danger"></span>
				</div>
            </div>
            <div class="row mb-3">
                <label asp-for="YasiyorMu" class="col-2 col-form-label"></label>
				<div class="col-5">
					<select asp-for="YasiyorMu" class="form-select">
						<option value="">-- Select --</option>
						<option value="true">Evet</option>
						<option value="false">Hayır</option>
					</select>
					<span asp-validation-for="YasiyorMu" class="text-danger"></span>
				</div>
            </div>
			<div class="row mb-3">
				<label asp-for="ImgSrcDisplay" class="col-2 col-form-label"></label>
				<div class="col-8">
					<input type="file" name="image" class="form-control" accept="@AppSettings.DosyaTipi" />
				</div>
			</div>
            <div class="row mb-3">
				<div class="offset-2 col-5">
					<input type="submit" value="Save" class="btn btn-primary" />
					&nbsp;&nbsp;
                    <button type="reset" class="btn btn-outline-primary">Reset</button>
					&nbsp;&nbsp;
					<a asp-action="Index">Back to List</a>
				</div>
            </div>
        </form>
    </div>
</div>




