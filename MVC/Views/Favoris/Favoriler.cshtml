@model IEnumerable<FavoriModel>
@*Generated by ScaffoldApp.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Favoriler";
}
<h1>@ViewData["Title"]</h1>
<p>
    <a asp-action="FavorileriTemizle" asp-controller="Favoris">Clear All</a>
</p>

@if(Model is not null && Model.Count()>0)
{
    <p>@Model.Count() Kayıt Bulundu.</p>
    <table class="table">
        <thead>
            <tr>
                <th class="col-2">
                    @Html.DisplayNameFor(model => model.ImgSrcDisplay)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.YapiAdi)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.YapiYapimYili)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.YapiBulunduğuUlke)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="col-2">
                        @if (item.ImgSrcDisplay is not null)
                        {
                            <img src="@item.ImgSrcDisplay" class="img-thumbnail" />
                        }
                        else
                        {
                            <i class="fa-solid fa-image" title="No Image"></i>
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.YapiAdi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.YapiYapimYili)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.YapiBulunduğuUlke)
                    </td>
                    <td>
                        <a asp-action="FavoriSil" asp-controller="Favoris" asp-route-yapiId="@item.YapiId" asp-route-kullaniciId="@item.KullaniciId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Kayıt Bulunamadı!</p>
}




