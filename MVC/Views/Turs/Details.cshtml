@using Business.Models;
@model TurModel
@*Generated by ScaffoldApp.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
    ViewData["Title"] = "Details";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>@Model.Adi</h4>
    <hr />
    <dl class="row">
        <dt class="col-2">
            @Html.DisplayNameFor(model => model.Yapilar)
        </dt>
		<td>
			@{
				string tags = "";
				string seperator = "<br />";
				foreach (var yapi in Model.Yapilar)
				{
					tags += yapi.Adi + seperator;
				}
				tags = tags.TrimEnd(seperator.ToCharArray());
			}
			@Html.Raw(tags)
		</td>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>&nbsp;|&nbsp;
    <a asp-action="Index">Back to List</a>
</div>



