@using Business.Models;
@using MVC.Settings;
@model YapiModel
@*Generated by ScaffoldApp.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
	ViewData["Title"] = "Create a New Building";
	string message = TempData["Message"] as string;
}
@if (message is not null)
{
	<p class="text-danger">
		@message
	</p>
}

<h1>@ViewData["Title"]</h1>

<h4>Yapi</h4>
<hr />
<div class="row">
	<div class="col-12">
		<form asp-action="Create" enctype="multipart/form-data">
			@Html.AntiForgeryToken()
			<div asp-validation-summary="All" class="text-danger"></div>
			<div class="row mb-3">
				<label asp-for="Adi" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="Adi" class="form-control" />
					<span asp-validation-for="Adi" class="text-danger"></span>
				</div>
			</div>
			<div class="row mb-3">
				<label asp-for="YapimYili" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="YapimYili" class="form-control" />
					<span asp-validation-for="YapimYili" class="text-danger"></span>
				</div>
			</div>
			<div class="row mb-3">
				<label asp-for="BulunduğuUlke" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="BulunduğuUlke" class="form-control" />
					<span asp-validation-for="BulunduğuUlke" class="text-danger"></span>
				</div>
			</div>
			<div class="row mb-3">
				<label asp-for="YapiDetayGosterim.Konsepti" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="YapiDetayGosterim.Konsepti" class="form-control" />
					<span asp-validation-for="YapiDetayGosterim.Konsepti" class="text-danger"></span>
				</div>
			</div>
			<div class="row mb-3">
				<label asp-for="YapiDetayGosterim.InsaatAlani" class="col-2 col-form-label"></label>
				<div class="col-5">
					<input asp-for="YapiDetayGosterim.InsaatAlani" class="form-control" />
					<span asp-validation-for="YapiDetayGosterim.InsaatAlani" class="text-danger"></span>
				</div>
			</div>
			<div class="row mb-3">
				<label asp-for="YapiDetayGosterim.TasiyiciSistem" class="col-2 col-form-label"></label>
				<div class="col-5">
					<select asp-for="YapiDetayGosterim.TasiyiciSistem" class="form-select" >
						<option value="">-- Select --</option>
						<option value="1">Betonarme</option>
						<option value="2">Çelik</option>
						<option value="3">Ahşap</option>
						<option value="4">Yığma</option>
						<option value="5">Belli Değil</option>
					</select>
					<span asp-validation-for="YapiDetayGosterim.TasiyiciSistem" class="text-danger"></span>
				</div>
			</div>
			<div class="row mb-3">
				<label asp-for="MimarId" class="col-2 col-form-label"></label>
				<div class="col-5">
					<select asp-for="MimarId" class="form-select" asp-items="ViewBag.Mimar">
						<option value="">-- Select --</option>
					</select>
					<span asp-validation-for="MimarId" class="text-danger"></span>
				</div>
			</div>
			<div class="row mb-3">
				<label asp-for="TurIds" class="col-2 col-form-label"></label>
				<div class="col-5">
					<select multiple="multiple" asp-for="TurIds" class="form-select" asp-items="ViewBag.Tur">
					</select>
					<span asp-validation-for="TurIds" class="text-danger"></span>
				</div>
			</div>

			<div class="row mb-3">
				<label asp-for="ImgSrcDisplay" class="col-2 col-form-label"></label>
				<div class="col-8">
					<input type="file" name="image" class="form-control" accept="@AppSettings.DosyaTipi" />
				</div>
			</div>

			<div class="row mb-3">
				<div class="offset-2 col-5">
					<input type="submit" value="Save" class="btn btn-primary" />
					&nbsp;&nbsp;
					<button type="reset" class="btn btn-outline-primary">Reset</button>
					&nbsp;&nbsp;
					<a asp-action="Index">Back to List</a>
				</div>
			</div>
		</form>
	</div>
</div>




