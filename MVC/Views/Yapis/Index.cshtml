@using Business.Models;
@model IEnumerable<YapiModel>
@*Generated by ScaffoldApp.*@
@*Model namespace using directive should be added to _ViewImports.cshtml.*@

@{
	ViewData["Title"] = "Buildings";
	string message = TempData["Message"] as string;
}

@if (message is not null)
{
	<p class="text-danger">
		@message
	</p>
}

<h1>@ViewData["Title"]</h1>
<p class="text-danger">@Model.ToList().Count() Kayıt Bulundu</p>
<p>
	<a asp-action="Create">Create a New Building</a>
</p>

<table id="yapis" class="display" style="width:100%">
	<thead>
		<tr>
			<th class="col-1">
				@Html.DisplayNameFor(model => model.ImgSrcDisplay)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Adi)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.YapimYiliGosterim)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.BulunduğuUlke)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.MimarGosterim)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Turs)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td class="col-1">
					@if(item.ImgSrcDisplay is not null)
					{
						<img src="@item.ImgSrcDisplay" class="img-fluid" />
					}
					else
					{
						<i class="fa-solid fa-image" title="No Image"></i>
					}
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Adi)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.YapimYiliGosterim)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.BulunduğuUlke)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.MimarGosterim)
				</td>
				<td>
					@{
						string tags = "";
						string seperator = "<br />";
						foreach (var tur in item.Turs)
						{
							tags += tur.Adi + seperator;
						}
						tags = tags.TrimEnd(seperator.ToCharArray());
					}
					@Html.Raw(tags)
				</td>
				<td>
					@if (User.IsInRole("Admin") || User.IsInRole("Kullanici"))
					{
						<a asp-action="FavoriEkle" asp-controller="Favoris" asp-route-YapiId="@item.Id">Add to Favorites</a>
						@: &nbsp;| &nbsp;
					}

					<a asp-action="Details" asp-route-id="@item.Id">Details</a> 
					@if(User.IsInRole("Admin"))
					{

						@: &nbsp;| &nbsp;
						<a asp-action="Edit" asp-route-id="@item.Id">Edit</a> @:&nbsp;|&nbsp;
						<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
					}
					
				</td>
			</tr>
		}
	</tbody>
</table>
@section Scripts {

	<link href="/lib/datatables/css/jquery.datatables.min.css" rel="stylesheet" />
	<script src="~/lib/datatables/js/jquery.datatables.min.js"></script>

	<script>

		$(function(){

			$("#yapis").DataTable();
		});

	</script>
}



